{
  "manifest_version": 3,
  "name": "Evreka IP • Sahip Verileri Kıyaslama",
  "version": "1.0.1",
  "description": "Marka Araştırması ekranında Kişi Numarası ile otomatik sorgu yapar (modal kapatma + input doldurma + Sorgula tıklama).",
  "permissions": [],
  "host_permissions": [
    "*://www.turkpatent.gov.tr/*",
    "*://arastirma.turkpatent.gov.tr/*",
    "*://webim.turkpatent.gov.tr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.turkpatent.gov.tr/arastirma-yap*",
        "*://webim.turkpatent.gov.tr/*"
      ],
      "js": [
        "content_script.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://kubilayguzel.github.io/*",
      "https://ip-manager-production-aab4b.web.app/*"
    ]
  }
}