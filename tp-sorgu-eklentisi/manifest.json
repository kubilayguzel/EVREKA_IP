{
  "manifest_version": 3,
  "name": "TP - Marka Dosya Sorgu",
  "version": "1.3.1",
  "description": "TürkPatent /trademark sayfasında başvuru numarasını otomatik sorgular.",
  "host_permissions": [
    "https://opts.turkpatent.gov.tr/*",
    "https://www.turkpatent.gov.tr/*",
    "https://giris.turkiye.gov.tr/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "https://opts.turkpatent.gov.tr/*",
        "https://www.turkpatent.gov.tr/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://ip-manager-production-aab4b.web.app/*",
      "https://kubilayguzel.github.io/*"
    ]
  }
}
