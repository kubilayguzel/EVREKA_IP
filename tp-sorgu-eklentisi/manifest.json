{
  "manifest_version": 3,
  "name": "Evreka IP Sorgu Yardımcısı",
  "version": "1.1.2",
  "description": "Evreka IP uygulamasından TÜRKPATENT üzerinde otomatik sorgulama yapar.",
  "permissions": [],
  "host_permissions": [
    "*://www.turkpatent.gov.tr/*",
    "*://opts.turkpatent.gov.tr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://opts.turkpatent.gov.tr/trademark*",
        "*://opts.turkpatent.gov.tr/login*"
      ],
      "js": [
        "content_script.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}